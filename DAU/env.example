# Community Mangrove Watch - Environment Configuration

# Satellite Data APIs
# Sentinel Hub credentials (https://apps.sentinel-hub.com/)
SENTINEL_HUB_CLIENT_ID=your_sentinel_hub_client_id_here
SENTINEL_HUB_CLIENT_SECRET=your_sentinel_hub_client_secret_here

# Google Earth Engine credentials (https://earthengine.google.com/)
EARTH_ENGINE_SERVICE_ACCOUNT=your_earth_engine_service_account_here
EARTH_ENGINE_PRIVATE_KEY=your_earth_engine_private_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_MAX_FILE_SIZE=10485760  # 10MB in bytes
API_RATE_LIMIT_PER_MINUTE=60

# Model Configuration
MODEL_CONFIDENCE_THRESHOLD=0.7
MODEL_ANOMALY_THRESHOLD=0.8
MODEL_SEGMENTATION_THRESHOLD=0.5

# Satellite Data Configuration
SATELLITE_DEFAULT_SOURCE=sentinel_hub  # or earth_engine
SATELLITE_IMAGE_SIZE=512
SATELLITE_CLOUD_COVERAGE_THRESHOLD=0.1
SATELLITE_DATE_RANGE_DAYS=30

# Processing Configuration
PROCESSING_MAX_IMAGE_SIZE=2048
PROCESSING_MIN_PHOTO_QUALITY=0.3
PROCESSING_MAX_COORDINATE_ERROR=0.001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mangrove_pipeline.log

# Gamification Configuration
GAMIFICATION_BASE_POINTS=10
GAMIFICATION_HIGH_CONFIDENCE_BONUS=5
GAMIFICATION_ANOMALY_DETECTION_BONUS=15
GAMIFICATION_HIGH_CONFIDENCE_THRESHOLD=0.8
GAMIFICATION_MEDIUM_CONFIDENCE_THRESHOLD=0.6

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost/mangrove_watch
# REDIS_URL=redis://localhost:6379

# Security Configuration
# JWT_SECRET_KEY=your_jwt_secret_key_here
# API_KEY_HEADER=X-API-Key
# API_KEY=your_api_key_here

# Monitoring Configuration
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090

# Development Configuration
DEBUG=true
ENVIRONMENT=development
